<head>
	{{>header}}
	<link rel="stylesheet" href="/../../css/quiz.css">
</head>

<body>
	{{>nav}}
	{{>alert}}
	<div class="container">
		<div class="row align-items-center mt-2">		
			<div class="col-12 col-md-6">
				<h1 class="display-5 font-weight-bold mb-0 text-center text-md-left" data-id="{{ quiz }}" data-count="{{ count }}" id="quiz-id">{{ label }}</h1>
			</div>
			<div class="col-12 col-md-6">
				<div class="float-none float-md-right">
					<div class="row align-items-center">
						<div class="col-6">
							<small class="text-muted text-nowrap float-left float-md-none">make sure you answer all questions</small>
						</div>
						<div class="col-6">
							<div class="float-right">
								<button type="button" class="btn btn-info" id="finish-btn-1">Finish</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row mt-1 justify-content-center">
		{{#items}}
			<div class="col-12 col-xl-6 mt-3 mb-3">
				<div class="card">
					<div class="card-header">
						{{#index}}items{{/index}}. {{ label }}
					</div>
					<div class="list-group list-group-flush">
						<label class="list-group-item mb-0">Select an answer</label>				
						{{#answers}}
							<input type="radio" name="quiz-question-{{ question_id }}" id="quiz-answer-{{ id }}" data-id="{{ id }}"/>
							<label class="list-group-item list-group-item-action mb-0" for="quiz-answer-{{ id }}">{{ label }}</label>
						{{/answers}}
					</div>
				</div>
			</div>
		{{/items}}
		</div>
		<div class="d-block d-sm-none">
			<button type="button" class="btn btn-info btn-block mb-3" id="finish-btn-2">Finish</button>
		</div>
	</div>
	{{>footer}}
	<script src="/../../js/quiz.js"></script>
</body>