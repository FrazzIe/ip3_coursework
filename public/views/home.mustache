<head>
	{{>header}}
</head>

<body>
	{{>nav}}
	<div class="container">
		<div class="row align-items-center mt-2">
		{{#admin}}
			<div class="col-6">
				<h1 class="display-5 font-weight-bold">Available Quizzes</h1>
			</div>
			<div class="col-6">
				<div class="float-right">
					<button type="button" class="btn btn-info">New Quiz</button>
				</div>
			</div>
		{{/admin}}
		{{^admin}}
			<div class="col text-center">
				<h1 class="display-5 font-weight-bold">Available Quizzes</h1>
			</div>
		{{/admin}}
		</div>
		<div class="row mt-1">
		{{#quizzes}}
			<div class="col">
				<div class="card">
					<div class="card-header" data-id="{{ id }}">
						<div class="row align-items-center">
							<div class="col-6">
								{{ label }}
							</div>
							<div class="col-6">
								<div class="float-right">												
									{{ questions }} Question(s)
								</div>
							</div>
						</div>
					</div>
					<div class="card-body">
						<div class="card-text">
							<div class="card-text">
							</div>
						</div>
					</div>
				</div>
			</div>
		{{/quizzes}}
		</div>
	</div>

	{{>footer}}
</body>