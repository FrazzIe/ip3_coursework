<head>
	{{>header}}
</head>

<body>
	{{>nav}}
	<div class="container">
		<div class="row align-items-center mt-2">		
			<div class="col-12 col-md-6">
				<h1 class="display-5 font-weight-bold mb-0 text-center text-md-left" data-id="{{ quiz }}" id="quiz-id">{{ label }} Results</h1>
			</div>
			<div class="col-12 col-md-6">
				<div class="float-none float-md-right">
					<div class="row align-items-center">
						<div class="col-6">
							<small class="text-muted text-nowrap float-left float-md-none">answers marked with <span class="text-success">&check;</span> are correct</small>
						</div>
						<div class="col-6">
							<div class="float-right">
								<h5 class="mb-0">{{ score }}/{{ count }} ({{ percentage }}%)</h5>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row mt-1 justify-content-center">
		{{#items}}
			<div class="col-12 mt-3 mb-3">
				<div class="card">
					<div class="card-header">
						{{#index}}items{{/index}}. {{ label }}
					</div>
					<ul class="list-group list-group-flush">
						<li class="list-group-item h6 mb-0">Possible Answers</li>
					{{#answers}}
						{{#picked}}
							{{#is_correct}}
								<li class="list-group-item list-group-item-success">
									{{ label }}
									<span class="float-right">&check;</span>									
								</li>
							{{/is_correct}}
							{{^is_correct}}
								<li class="list-group-item list-group-item-danger">
									{{ label }}
								</li>	
							{{/is_correct}}
						{{/picked}}
						{{^picked}}
							<li class="list-group-item">
								{{ label }}
								{{#is_correct}}
									<span class="float-right">&check;</span>	
								{{/is_correct}}								
							</li>
						{{/picked}}
						{{#is_correct}}

						{{/is_correct}}
					{{/answers}}
					</ul>
				</div>
			</div>
		{{/items}}
		</div>
		<div class="d-block d-sm-none">
			<a href="/" class="btn btn-info btn-block mb-3" id="return-btn">Return</a>
		</div>
	</div>
	{{>footer}}
</body>